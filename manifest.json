{
  "manifest_version": 3,
  "name": "DiMeTrans",
  "version": "0.0.3",
  "description": "Automatic Discord message translation to Czech",
  "author": "Tomáš Mark",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "*://*.discord.com/*",
    "http://192.168.79.2/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://discord.com/*",
        "*://canary.discord.com/*",
        "*://ptb.discord.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "minimum_chrome_version": "107"
}
